<!DOCTYPE html>
<html>
<head>
  <title>BlocItOff - By Ketan Shukla</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


  <div class="container">
    <nav class="navbar navbar-default navbar-static-top">
        <ul class="nav nav-tabs">
          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
              <li class="navbar-right"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete  %></li>
              <li class="navbar-right"> <%= link_to current_user.name, users_show_path %><li>
              <li class="navbar-right"><%= image_tag current_user.gravatar_url %></li>

          <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <li><%= link_to "Register", new_user_registration_path %></li>
          <% end %>
        </ul>

        <%= yield %>
    </nav>
  </div>



</body>
</html>
